<p id="notice"><%= notice %></p>

<h1>Hashtag<%=  %></h1>
<div class="block">
<table>
  <thead>
    <tr>
      <th>Likes</th>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= button_to like_post_path(post), method: :put do %>
              <span><%= post.get_upvotes.size %></span>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= render_with_hashtags(post.body) %></td>
        <td style="width:50px; height:auto">
          <%= link_to image_tag(post.image, style:'width:100%'), posts_path %>
        </td>
        <td><button><%= link_to 'Show', post %></button></td>
        <td><button><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= post.user.first_name %> <%= post.user.last_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back to my profile', user_root_path %>

</ div>